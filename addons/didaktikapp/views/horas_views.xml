<odoo>

<record 
id="view_horas_form" model="ir.ui.view">
<field name="name">didaktikapp.horas.form</field>
<field name="model">didaktikapp.horas</field>
<field name="arch" type="xml">
<form>
<sheet>
<group>
<field name="employee_id"/>
<field name="app_id"/>
<field name="fecha"/>
<field name="horas"/>
</group>
</sheet>
</form>
</field>
</record>


<record 
id="view_horas_tree" model="ir.ui.view">
<field name="name">didaktikapp.horas.tree</field>
<field name="model">didaktikapp.horas</field>
<field name="arch" type="xml">
<tree>
<field name="employee_id"/>
<field name="app_id"/>
<field name="fecha"/>
<field name="horas"/>
</tree>
</field>
</record>


<record 
id="action_horas" model="ir.actions.act_window">
<field name="name">Mis horas</field>
<field name="res_model">didaktikapp.horas</field>
<field name="view_mode">tree,form</field>
</record>


<menuitem 
id="menu_horas"
name="Horas trabajadas"
parent="menu_didaktikapp_root"
action="action_horas"/>

</odoo>